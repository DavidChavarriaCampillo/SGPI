                </div>
                <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "ValPrograma"), "Programa")
                </div>
                <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "ValRol"), "Rol")
                </div>
                <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "ValGenero"), "Genero")
