@model IEnumerable<SGPI.Models.Usuario>
@{
    ViewData["Title"] = "BuscarUsuario";
    int cont = 0;
}

@*style="background-image:src(../../wwwroot/img/tdea.png); background-size:60%; height: 50%; background-position: center; background-repeat: no-repeat; background-attachment: fixed;">*@
<body>
    <div class="row">
        <h1 style="margin-top: 5%">Buscar Usuario</h1>
        <img src="~/img/tdea.png" style="margin-left:750px; width:100px; margin-top:20px" />
    </div>
    <br />
    <hr style="border-color:black" />
    <div class="row">
        <form style="margin-left:10px">
            <button class="btn btn-outline-dark" asp-controller="Administrador" asp-action="MenuAdministrador" type="submit">Atras</button>
        </form>
        <form class="form-inline" style="margin-left:770px" method="post">
            <input class="form-control" type="search" placeholder="Search" value=" " name="documento">
            <input class="btn btn-outline-dark" type="submit" value="Buscar">
        </form>
    </div>
    <br />
    <div class="container">
        <table class="table table-responsive" style="margin-left: 120px; border-color:black;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tipo Documento</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Programa</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {

                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => i.IdUsuario)</th>
                        <td>@Html.DisplayFor(modelItem => i.Documento)</td>
                        <td>@Html.DisplayFor(modelItem => i.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => i.Apellido)</td>
                        <td>@Html.ViewBag.programa[cont]</td>
                        <td>@Html.DisplayFor(modelItem => i.IdRol)</td>
                        <td>@Html.DisplayFor(modelItem => i.Direccion)</td>
                        <td>
                            <a href='@Url.Action("Edit", "Administrador", new { id = i.IdUsuario })'>
                                <img src="~/img/editar.png" style="width:25px" />
                            </a>
                            <a href='@Url.Action("Delete", "Administrador",new { id = i.IdUsuario })'>
                                <img src='~/img/eliminar.png' style="width:25px" />
                            </a>
                            <a href='@Url.Action("EntrevistaAdmicion", "Coordinador",new { id = i.IdUsuario })'>
                                <img src='~/img/eliminar.png' style="width:25px" />
                            </a>
                        </td>
                    </tr>

                    cont++;

                }
            </tbody>
        </table>
    </div>
</body>